<p style="color: green"><%= notice %></p>

<h1>Patients List</h1>


<div id="patients">

<table class="table table-striped table-hover">
  <thead class="table table-dark">
  <tr>
    <th>PID</th>
    <th>F Name</th>
    <th>L Name</th>
    <th>NIC</th>
    <th>Phone</th>
    <th colspan="2"></th>
  </tr>
  </thead>

  <tbody >
  <% @patients.each do |patient| %>
    <tr>
      <td><%= patient.PID %></td>
      <td><%= patient.f_name %></td>
      <td><%= patient.l_name %></td>
      <td><%= patient.NIC %></td>
      <td><%= patient.phone %></td>
      <td><%= link_to "Show", patient %></td>
      <td><%= link_to 'Edit', edit_patient_path(patient) %></td>

    </tr>
  <% end %>
  </tbody>
</table>


</div>


<%= link_to "New patient", new_patient_path, class:"btn btn-secondary" %>
